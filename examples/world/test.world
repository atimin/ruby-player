quit_time 3600

paused 0

resolution 0.02

window
(
  size [ 635.000 666.000 ] # in pixels
  scale 36.995   # pixels per meter
  center [ -0.040  -0.274 ]
  rotate [ 0  0 ]

  show_data 1              # 1=on 0=off
)

define carton model
(
  color "yelow"
  #carton is retangular
  # so make a square shape and use size[]
  block
  (
   points 4
   point[0] [1 0]
   point[1] [1 4]
   point[2] [0 4]
   point[3] [0 0]
   z [0 1]
  )
  # average litre carton size is ~ 20cm x 10cm x 5cm ish
  size [0.4 4 2]
)


define bender_ranger ranger
(
  color "red"

  sensor
  (
    pose [0 0.1 0.3 15]
    size [0.4 0.4 0.4]
    fov 30
    range [0.1 3]
  )

  sensor
  (
    pose [0 -0.1 0.3 -15]
    size [0.4 0.4 0.4]
    fov 30
    range [0.1 3]
  )
)

define bender2dx position
(
  color "grey"

  block
  (
    points 5
    point[0] [-3 -3]
    point[1] [-3 3]
    point[2] [3 3]
    point[3] [9 0]
    point[4] [3 -3]
    z [0 1]
  )

  drive "omni"

  bender_ranger()
  size [1 1 1]
)

carton
(
  name "c0"
  pose [ 3 0 0 0.0]
)

bender2dx
(
  name "bender"
  pose [ 0 0 0 0.000 ]

)
